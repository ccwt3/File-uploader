generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  isAuth   Boolean  @default(false)
  folders  folder[]
}

model folder {
  id         Int        @id @default(autoincrement())
  authorId   Int
  folderName String
  isShared   Boolean    @default(false)
  parentId   Int?
  file       fileData[]
  author     User       @relation(fields: [authorId], references: [id])
  parent     folder?    @relation("parent_son", fields: [parentId], references: [id])
  son        folder[]   @relation("parent_son")

  @@unique([authorId, folderName], name: "author_folder")
}

model fileData {
  id         Int      @id @default(autoincrement())
  folderId   Int
  url        String
  name       String
  size       Float
  uploadTime DateTime @default(now())
  fileType   String?
  folder     folder   @relation(fields: [folderId], references: [id])

  @@unique([folderId, name], name: "folder_file")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
