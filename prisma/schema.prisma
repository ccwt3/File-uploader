generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  isAuth   Boolean  @default(false)
  folders  folder[]
}

model folder {
  id         Int        @id @default(autoincrement())
  author     User       @relation(fields: [authorId], references: [id])
  authorId   Int
  folderName String     @unique
  file       fileData[]
}

model fileData {
  id         Int      @id @default(autoincrement())
  folder     folder   @relation(fields: [folderId], references: [id])
  folderId   Int
  url        String
  name       String   @unique
  size       Float
  uploadTime DateTime @default(now())
  fileType   String?
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
